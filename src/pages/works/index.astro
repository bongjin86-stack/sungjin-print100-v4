---
import Container from "@/components/layout/Container.astro";
import Section from "@/components/layout/Section.astro";
import SectionTitle from "@/components/ui/SectionTitle.astro";
import Layout from "@/layouts/Layout.astro";
import { supabase } from "../../lib/supabase";

export const prerender = false;

// DB에서 works 가져오기
const { data: works, error } = await supabase
  .from('works')
  .select('*')
  .eq('is_published', true)
  .order('created_at', { ascending: false });

if (error) {
  console.error('Error fetching works:', error);
}
---

<Layout title="인쇄가이드 | Sungjinprint" description="인쇄에 필요한 다양한 가이드를 확인하세요.">
  <Section background="primary">
    <Container>
      <div class="works-header">
        <SectionTitle title="Guide" subtitle="인쇄가이드" />
        <p class="works-description">인쇄에 필요한 다양한 정보를 확인하세요.</p>
      </div>

      <div class="works-grid">
        {works && works.map((work) => (
          <article class="work-item fade" data-animate>
            <a class="item-link" href={`/works/detail/${work.id}`}>
              <div class="item-image">
                <img
                  src={work.image || 'https://images.unsplash.com/photo-1586075010923-2dd4570fb338?w=800&h=600&fit=crop'}
                  alt={work.title}
                  width="800"
                  height="500"
                  loading="lazy"
                />
                <span class="item-category">{work.tag || '가이드'}</span>
              </div>
              <div class="item-content">
                <h3 class="item-title">{work.title}</h3>
                <p class="item-description">{work.description}</p>
                <span class="item-view">자세히 보기</span>
              </div>
            </a>
          </article>
        ))}
      </div>

      {(!works || works.length === 0) && (
        <div class="empty-state">
          <p>등록된 인쇄가이드가 없습니다.</p>
        </div>
      )}
    </Container>
  </Section>
</Layout>

<style lang="scss">
  .works-header {
    margin-bottom: var(--sp-4xl);
    text-align: center;
  }

  .works-description {
    margin-top: var(--sp-lg);
    color: var(--c-text-sub);
    font-size: var(--fs-lg);
  }

  .works-grid {
    display: grid;
    gap: var(--sp-3xl);

    @media (min-width: 600px) {
      grid-template-columns: repeat(2, 1fr);
      gap: var(--sp-4xl);
    }
  }

  .work-item {
  }

  .item-link {
    display: block;
    transition: transform var(--transition-slow);

    &:hover {
      transform: translateY(-4px);
    }
  }

  .item-image {
    position: relative;
    width: 100%;
    overflow: hidden;
    border-radius: var(--radius-3xl);

    img {
      width: 100%;
      height: auto;
      object-fit: cover;
      aspect-ratio: 16 / 10;
      transition: transform var(--transition-slower);
    }

    .work-item:hover & img {
      transform: scale(1.05);
    }
  }

  .item-category {
    position: absolute;
    top: var(--sp-md);
    left: var(--sp-md);
    padding: var(--sp-xs) var(--sp-md);
    background-color: rgba(255, 255, 255, 0.7);
    color: var(--c-text);
    font-size: var(--fs-xs);
    font-weight: 500;
    line-height: var(--lh-tight);
    text-transform: uppercase;
    letter-spacing: 0.02em;
    border-radius: var(--radius-full);
  }

  .item-content {
    display: flex;
    flex-direction: column;
    gap: var(--sp-sm);
    margin: var(--sp-lg) 0 0;
  }

  .item-title {
    color: var(--c-text);
    font-size: var(--fs-lg);
    font-weight: 500;
    line-height: var(--lh-snug);

    @media (min-width: 900px) {
      font-size: var(--fs-xl);
    }
  }

  .item-description {
    color: var(--c-text-sub);
    font-size: var(--fs-md);
    line-height: var(--lh-loose);
  }

  .item-view {
    align-self: flex-start;
    display: inline-block;
    margin: var(--sp-md) 0 0;
    padding: var(--sp-sm) var(--sp-lg);
    border: 1px solid var(--c-border);
    border-radius: var(--radius-full);
    background-image: linear-gradient(
      to right,
      var(--c-primary) 50%,
      transparent 50%
    );
    background-size: 200% 100%;
    background-position: right;
    color: var(--c-text);
    font-size: var(--fs-sm);
    font-weight: 400;
    line-height: 1.6;
    text-align: center;
    transition:
      background-position var(--transition-slow),
      color var(--transition-slow),
      border-color var(--transition-slow);

    .work-item:hover & {
      background-position: left;
      color: var(--c-text-inverse);
      border-color: var(--c-primary);
    }
  }

  .empty-state {
    text-align: center;
    padding: var(--sp-5xl);
    color: var(--c-text-sub);
  }
</style>

<script>
  function initializeObserver() {
    const animateElements = document.querySelectorAll("[data-animate]");

    const observer = new IntersectionObserver(
      (entries) => {
        entries.forEach((entry) => {
          if (entry.isIntersecting) {
            const element = entry.target as HTMLElement;
            const delay = element.dataset.animateDelay || "0";

            setTimeout(() => {
              element.classList.add("is-animated");
            }, parseInt(delay));

            observer.unobserve(element);
          }
        });
      },
      {
        threshold: 0.2,
        rootMargin: "0px 0px -10% 0px",
      }
    );

    animateElements.forEach((element) => {
      observer.observe(element);
    });
  }

  document.addEventListener("astro:page-load", initializeObserver);
</script>
