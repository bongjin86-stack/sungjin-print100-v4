---
export const prerender = true;

import Container from "@/components/layout/Container.astro";
import Section from "@/components/layout/Section.astro";
import LinkButton from "@/components/ui/LinkButton.astro";
import PageHero from "@/components/ui/PageHero.astro";
import Layout from "@/layouts/Layout.astro";
---

<Layout
  title="404 Not Found - 페이지를 찾을 수 없습니다"
  description="요청하신 페이지를 찾을 수 없습니다."
  noindex={true}
>
  <PageHero title="Not Found" subtitle="페이지를 찾을 수 없습니다" />
  <Section>
    <Container size="medium">
      <div class="not-found-message">
        <p class="not-found-text">요청하신 페이지를 찾을 수 없습니다.</p>
        <p class="not-found-text">
          페이지가 이동되었거나 삭제되었을 수 있습니다. URL을 다시 확인해 주세요.
        </p>
      </div>

      <div class="not-found-actions">
        <LinkButton href="/" variant="solid" size="large">
          홈으로 돌아가기
        </LinkButton>
      </div>
    </Container>
  </Section>
</Layout>

<style lang="scss">
  .not-found-message {
    margin-bottom: var(--sp-2xl);
    color: var(--c-text);
    font-size: var(--fs-base);
    line-height: var(--lh-loose);

    @media (min-width: 900px) {
      margin-bottom: var(--sp-3xl);
      font-size: var(--fs-md);
    }
  }

  .not-found-text {
    margin-bottom: var(--sp-md);

    &:last-child {
      margin-bottom: 0;
    }
  }
</style>
