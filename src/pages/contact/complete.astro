---
import Container from "@/components/layout/Container.astro";
import Section from "@/components/layout/Section.astro";
import LinkButton from "@/components/ui/LinkButton.astro";
import PageHero from "@/components/ui/PageHero.astro";
import Layout from "@/layouts/Layout.astro";
---

<Layout
  title="문의 완료 - Contact Complete"
  description="문의해 주셔서 감사합니다. 담당자가 빠르게 연락드리겠습니다."
>
  <PageHero title="Complete" subtitle="문의 완료" />

  <Section>
    <Container>
      <div class="completed-content">
        <div class="completed-message">
          <p class="message-thanks">
            문의해 주셔서 감사합니다.
          </p>
          <p class="message-info">
            담당자가 영업일 기준 2일 이내에 연락드리겠습니다.<br />
            잠시만 기다려 주세요.
          </p>
        </div>
        <LinkButton href="/" variant="solid" size="large">
          홈으로 돌아가기
        </LinkButton>
      </div>
    </Container>
  </Section>
</Layout>

<style lang="scss">
  .completed-content {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--sp-3xl);
    margin: 0 auto;
    text-align: center;

    @media (min-width: 900px) {
      gap: var(--sp-4xl);
    }
  }

  .completed-message {
    display: flex;
    flex-direction: column;
    gap: var(--sp-xl);
  }

  .message-thanks {
    color: var(--c-text);
    font-size: var(--fs-lg);
    font-weight: 500;
    line-height: var(--lh-normal);

    @media (min-width: 900px) {
      font-size: var(--fs-xl);
    }
  }

  .message-info {
    color: var(--c-text-sub);
    font-size: var(--fs-base);
    line-height: var(--lh-loose);

    @media (min-width: 900px) {
      font-size: var(--fs-md);
    }
  }
</style>
