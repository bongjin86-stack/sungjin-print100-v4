---
import Edu100Form from "../../../components/admin/Edu100Form";
import AdminLayout from "../../../layouts/AdminLayout.astro";
import { supabase } from "../../../lib/supabase";

export const prerender = false;

const { id } = Astro.params;

const { data: cover, error } = await supabase
  .from("edu100_covers")
  .select("*")
  .eq("id", id)
  .single();

if (error || !cover) {
  return Astro.redirect("/admin/edu100");
}
---

<AdminLayout title={`${cover.title} 수정`}>
  <div class="admin-header">
    <h1>표지 수정</h1>
    <a href="/admin/edu100" class="btn-back">목록으로</a>
  </div>

  <Edu100Form client:only="react" mode="edit" initialData={cover} />
</AdminLayout>

<style>
  .admin-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 2rem;
  }

  .admin-header h1 {
    font-size: 1.5rem;
    font-weight: 600;
    color: var(--c-text);
  }

  .btn-back {
    background: #e5e7eb;
    color: #374151;
    padding: 0.75rem 1.5rem;
    border-radius: 0.5rem;
    text-decoration: none;
    font-weight: 500;
    transition: background 0.2s;
  }

  .btn-back:hover {
    background: #d1d5db;
  }
</style>
