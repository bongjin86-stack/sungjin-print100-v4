---
import ManualOrdersManager from "@/components/admin/ManualOrdersManager";
import AdminLayout from "../../../layouts/AdminLayout.astro";

export const prerender = false;
---

<AdminLayout title="수동 실적 입력">
  <div class="admin-header">
    <h1>수동 실적 입력</h1>
    <div class="header-actions">
      <a href="/admin/edu100" class="btn-back">커버 목록</a>
    </div>
  </div>

  <ManualOrdersManager client:only="react" />
</AdminLayout>

<style>
  .admin-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 2rem;
  }

  .admin-header h1 {
    font-size: 1.5rem;
    font-weight: 600;
    color: var(--c-text);
  }

  .header-actions {
    display: flex;
    gap: 0.75rem;
    align-items: center;
  }

  .btn-back {
    background: #e5e7eb;
    color: #374151;
    padding: 0.75rem 1.5rem;
    border-radius: 0.5rem;
    text-decoration: none;
    font-weight: 500;
    transition: background 0.2s;
  }

  .btn-back:hover {
    background: #d1d5db;
  }
</style>
