---
import PrintsForm from "../../../components/admin/PrintsForm";
import AdminLayout from "../../../layouts/AdminLayout.astro";
import { supabase } from "../../../lib/supabase";

export const prerender = false;

const { id } = Astro.params;

// Prints 데이터 가져오기
const { data: print, error } = await supabase
  .from("prints")
  .select("*")
  .eq("id", id)
  .single();

if (error || !print) {
  return Astro.redirect("/admin/prints");
}
---

<AdminLayout title={`${print.title} 수정`}>
  <div class="admin-header">
    <h1>Prints 수정</h1>
    <a href="/admin/prints" class="btn-back">목록으로</a>
  </div>

  <PrintsForm client:only="react" mode="edit" initialData={print} />
</AdminLayout>

<style>
  .admin-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 2rem;
  }

  .admin-header h1 {
    font-size: 1.5rem;
    font-weight: 600;
    color: var(--c-text);
  }

  .btn-back {
    background: #e5e7eb;
    color: #374151;
    padding: 0.75rem 1.5rem;
    border-radius: 0.5rem;
    text-decoration: none;
    font-weight: 500;
    transition: background 0.2s;
  }

  .btn-back:hover {
    background: #d1d5db;
  }
</style>
