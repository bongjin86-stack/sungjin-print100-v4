---
import Container from "@/components/layout/Container.astro";
import Section from "@/components/layout/Section.astro";
import LinkButton from "@/components/ui/LinkButton.astro";
import SectionTitle from "@/components/ui/SectionTitle.astro";
import { getConfig, loadSiteConfig } from "@/lib/siteConfigService";

// DB에서 설정 로드
await loadSiteConfig();
const aboutText = getConfig("landing_about_text");

// 줄바꿈을 <br />로 변환
const formattedText = aboutText
  .split("\n")
  .map((line) => line || "<br />")
  .join("<br />");
---

<Section background="secondary">
  <Container>
    <div class="about-inner">
      <SectionTitle title="About" subtitle="회사소개" class="about-header" />

      <div class="about-content">
        <p class="about-text" set:html={formattedText} />
        <LinkButton
          href="/about/"
          ariaLabel="회사소개"
          size="medium"
          variant="outlined"
          class="about-link"
        >
          회사소개
        </LinkButton>
      </div>
    </div>
  </Container>
</Section>

<style lang="scss">
  .about-inner {
    @media (min-width: 900px) {
      display: grid;
      grid-template-columns: 20% 1fr;
      gap: 0 var(--sp-4xl);
    }
  }

  .about-header {
    margin-bottom: var(--sp-xl);

    @media (min-width: 900px) {
      position: sticky;
      top: var(--sp-4xl);
      flex-direction: column;
      align-items: start;
      align-self: flex-start;
      flex-grow: 1;
      margin: 0;
      min-width: fit-content;
    }
  }

  .about-text {
    color: var(--c-text);
    font-size: var(--fs-xl);
    line-height: var(--lh-loose);

    @media (min-width: 600px) {
      font-size: var(--fs-2xl);
    }
  }

  .about-link {
    margin: var(--sp-lg) 0 0;
  }
</style>
