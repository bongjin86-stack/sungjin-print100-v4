---
import Container from "@/components/layout/Container.astro";
import Section from "@/components/layout/Section.astro";
import LinkButton from "@/components/ui/LinkButton.astro";
import { getConfig, loadSiteConfig } from "@/lib/siteConfigService";

// DB에서 설정 로드
await loadSiteConfig();

const ctaTitle = getConfig("landing_cta_title");
const ctaSubtitle = getConfig("landing_cta_subtitle");
const ctaText = getConfig("landing_cta_text");
const ctaListRaw = getConfig("landing_cta_list");
const ctaButtonText = getConfig("landing_cta_button_text");
const ctaButtonLink = getConfig("landing_cta_button_link");

// 줄바꿈으로 구분된 문자열을 배열로 변환
const ctaList = ctaListRaw.split("\n").filter((item) => item.trim());
---

<Section background="inverse">
  <Container>
    <div class="cta-header">
      <h2 class="cta-title">{ctaTitle}</h2>
      <span class="cta-subtitle">{ctaSubtitle}</span>
    </div>
    <p class="cta-text">{ctaText}</p>
    {
      ctaList.length > 0 && (
        <ul class="cta-list">
          {ctaList.map((item) => (
            <li class="cta-list-item">{item}</li>
          ))}
        </ul>
      )
    }
    <div class="cta-actions">
      <LinkButton
        href={ctaButtonLink || "/contact"}
        variant="solid-sub"
        size="large"
      >
        {ctaButtonText || "문의하기"}
      </LinkButton>
    </div>
  </Container>
</Section>

<style lang="scss">
  .cta-header {
    display: flex;
    flex-direction: column;
    gap: var(--sp-xs);

    @media (min-width: 900px) {
      gap: var(--sp-sm);
    }
  }

  .cta-title {
    color: var(--c-text-inverse);
    font-size: clamp(var(--fs-2xl), 5vw, var(--fs-3xl));
    font-weight: 400;
    line-height: var(--lh-none);
    letter-spacing: 0.05em;
  }

  .cta-subtitle {
    color: var(--c-text-inverse-sub);
    font-size: var(--fs-sm);
    font-weight: 400;
    line-height: var(--lh-normal);

    @media (min-width: 900px) {
      font-size: var(--fs-base);
    }
  }

  .cta-text {
    margin: var(--sp-xl) 0;
    color: var(--c-text-inverse-lightest);
    font-size: var(--fs-base);
    line-height: var(--lh-loose);

    @media (min-width: 900px) {
      font-size: var(--fs-md);
    }
  }

  .cta-list {
    display: grid;
    grid-template-columns: 1fr;
    gap: var(--sp-sm);
    color: var(--c-text-inverse-lighter);
    font-size: var(--fs-sm);
    line-height: var(--lh-relaxed);

    @media (min-width: 600px) {
      font-size: var(--fs-base);
    }

    @media (min-width: 900px) {
      grid-template-columns: 1fr 1fr;
    }
  }

  .cta-list-item {
    position: relative;
    padding-left: var(--sp-lg);
    text-align: left;

    &::before {
      content: "・";
      position: absolute;
      left: 0;
    }

    &:first-child {
      margin: 0;
    }
  }

  .cta-actions {
    margin-top: var(--sp-2xl);
  }
</style>
