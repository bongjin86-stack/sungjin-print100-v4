---
import Container from "@/components/layout/Container.astro";
import Section from "@/components/layout/Section.astro";
import LinkText from "@/components/ui/LinkText.astro";
import SectionTitle from "@/components/ui/SectionTitle.astro";

import { supabase } from "../../lib/supabase";

// 랜딩 페이지 설정에서 Works 설정 가져오기
const { data: settings } = await supabase
  .from("site_settings")
  .select("key, value")
  .in("key", [
    "landing_works_title",
    "landing_works_subtitle",
    "landing_works_link_text",
    "landing_works_description",
    "landing_works_image",
    "landing_works_sub_items",
  ]);

const configMap: Record<string, string> = {};
(settings || []).forEach((s: { key: string; value: string }) => {
  configMap[s.key] = s.value;
});

const sectionTitle = configMap.landing_works_title || "Works";
const sectionSubtitle = configMap.landing_works_subtitle || "제작실적";
const linkText = configMap.landing_works_link_text || "전체보기";
const description = configMap.landing_works_description || "";
const mainImage = configMap.landing_works_image || "";

// 서브 아이템 파싱
interface SubItem {
  type: "custom" | "product";
  image?: string;
  title?: string;
  text?: string;
  productId?: string;
}

let subItems: SubItem[] = [];
try {
  subItems = JSON.parse(configMap.landing_works_sub_items || "[]");
} catch {
  subItems = [];
}

// product 타입 서브 아이템의 작품 데이터 가져오기
const workIds = subItems
  .filter((item) => item.type === "product" && item.productId)
  .map((item) => item.productId!);

let worksMap: Record<string, any> = {};
if (workIds.length > 0) {
  const { data } = await supabase
    .from("works")
    .select("id, title, image, tag")
    .in("id", workIds)
    .eq("is_published", true);

  if (data) {
    data.forEach((w: any) => {
      worksMap[w.id] = w;
    });
  }
}

// 렌더용 서브 아이템 조합
const resolvedSubs = subItems
  .map((item) => {
    if (item.type === "product" && item.productId) {
      const w = worksMap[item.productId];
      if (!w) return null;
      return { image: w.image, title: w.title, text: w.tag || "", href: `/works/${w.id}` };
    }
    return { image: item.image || "", title: item.title || "", text: item.text || "", href: "" };
  })
  .filter(Boolean) as { image: string; title: string; text: string; href: string }[];
---

<Section background="primary">
  <Container>
    <div class="works-inner">
      <div class="works-library-content">
        <div class="works-library-main">
          {mainImage ? (
            <img
              src={mainImage}
              alt={sectionTitle}
              width="960"
              height="720"
              loading="lazy"
            />
          ) : (
            <div class="works-library-placeholder">No Image</div>
          )}
        </div>

        {resolvedSubs.length > 0 && (
          <div class="works-library-subs">
            {resolvedSubs.map((sub) => {
              const inner = (
                <div class="works-library-sub">
                  {sub.image && (
                    <div class="works-library-sub-image">
                      <img
                        src={sub.image}
                        alt={sub.title || ""}
                        width="320"
                        height="240"
                        loading="lazy"
                      />
                    </div>
                  )}
                  {(sub.title || sub.text) && (
                    <div class="works-library-sub-text">
                      {sub.title && <h3 class="works-library-sub-title">{sub.title}</h3>}
                      {sub.text && <p class="works-library-sub-desc">{sub.text}</p>}
                    </div>
                  )}
                </div>
              );
              return sub.href ? <a href={sub.href} class="works-library-sub-link">{inner}</a> : inner;
            })}
          </div>
        )}
      </div>

      <div class="works-header">
        <SectionTitle title={sectionTitle} subtitle={sectionSubtitle} />
        {description && (
          <p class="works-showcase-desc">{description}</p>
        )}
        <LinkText href="/works/" ariaLabel="Works 전체보기">
          {linkText}
        </LinkText>
      </div>
    </div>
  </Container>
</Section>

<style lang="scss">
  .works-inner {
    @media (min-width: 900px) {
      display: grid;
      grid-template-columns: 1fr 20%;
      gap: 0 var(--sp-4xl);
    }
  }

  .works-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: var(--sp-lg);
    margin-bottom: var(--sp-3xl);

    /* 모바일에서는 콘텐츠보다 위에 표시 */
    order: -1;

    @media (min-width: 900px) {
      order: 0;
      position: sticky;
      top: var(--sp-4xl);
      flex-direction: column;
      align-items: start;
      align-self: flex-start;
      flex-grow: 1;
      margin: 0;
      min-width: fit-content;
    }
  }

  .works-showcase-desc {
    display: none;

    @media (min-width: 900px) {
      display: block;
      color: var(--c-text-sub);
      font-size: var(--fs-sm);
      line-height: var(--lh-relaxed);
      margin: 0;
    }
  }

  .works-library-content {
    display: flex;
    flex-direction: column;
    gap: var(--sp-xl);
  }

  .works-library-main {
    width: 100%;
    overflow: hidden;
    border-radius: var(--radius-3xl);

    img {
      width: 100%;
      height: auto;
      object-fit: cover;
      aspect-ratio: 5 / 6;
      display: block;

      @media (min-width: 900px) {
        aspect-ratio: 2.3 / 1;
      }
    }
  }

  .works-library-placeholder {
    width: 100%;
    aspect-ratio: 5 / 6;

    @media (min-width: 900px) {
      aspect-ratio: 2.3 / 1;
    }
    background-color: var(--c-bg-secondary);
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--c-text-sub);
  }

  .works-library-subs {
    display: flex;
    flex-direction: column;
    gap: var(--sp-lg);
  }

  .works-library-sub-link {
    display: block;
    text-decoration: none;
    color: inherit;
    transition: opacity var(--transition-base);

    &:hover {
      opacity: 0.8;
    }
  }

  .works-library-sub {
    display: flex;
    gap: var(--sp-lg);
    align-items: start;

    @media (min-width: 600px) {
      gap: var(--sp-xl);
    }
  }

  .works-library-sub-image {
    flex: 0 0 36%;
    overflow: hidden;
    border-radius: var(--radius-2xl);

    @media (min-width: 600px) {
      flex: 0 0 30%;
    }

    @media (min-width: 900px) {
      flex: 0 0 28%;
    }

    img {
      width: 100%;
      height: auto;
      object-fit: cover;
      aspect-ratio: 4 / 3;
      display: block;
    }
  }

  .works-library-sub-text {
    flex: 1;
    min-width: 0;
    padding-top: var(--sp-xs);
  }

  .works-library-sub-title {
    color: var(--c-text);
    font-size: var(--fs-base);
    font-weight: 600;
    line-height: var(--lh-snug);
    margin: 0 0 var(--sp-xs);

    @media (min-width: 600px) {
      font-size: var(--fs-lg);
    }
  }

  .works-library-sub-desc {
    color: var(--c-text-sub);
    font-size: var(--fs-sm);
    line-height: var(--lh-relaxed);
    margin: 0;

    @media (min-width: 600px) {
      font-size: var(--fs-base);
    }
  }
</style>
