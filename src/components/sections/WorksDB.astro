---
import Container from "@/components/layout/Container.astro";
import Section from "@/components/layout/Section.astro";
import LinkText from "@/components/ui/LinkText.astro";
import SectionTitle from "@/components/ui/SectionTitle.astro";

import { supabase } from "../../lib/supabase";

// 랜딩 페이지 설정에서 Works 설정 가져오기
const { data: settings } = await supabase
  .from("site_settings")
  .select("key, value")
  .in("key", ["landing_works_ids", "landing_works_count"]);

const configMap: Record<string, string> = {};
(settings || []).forEach((s: { key: string; value: string }) => {
  configMap[s.key] = s.value;
});

let workIds: string[] = [];
try {
  workIds = JSON.parse(configMap.landing_works_ids || "[]");
} catch {
  workIds = [];
}

const maxCount = parseInt(configMap.landing_works_count || "4", 10);

// 선택된 작품 또는 최신 작품 가져오기
let works: any[] = [];

if (workIds.length > 0) {
  // 관리자가 선택한 순서대로 가져오기
  const { data } = await supabase
    .from("works")
    .select("*")
    .in("id", workIds)
    .eq("is_published", true);

  if (data) {
    // 관리자가 설정한 순서 유지
    const dataMap = new Map(data.map((d: any) => [d.id, d]));
    works = workIds
      .map((id) => dataMap.get(id))
      .filter(Boolean)
      .slice(0, maxCount);
  }
} else {
  // 기본: 최신 published works
  const { data, error } = await supabase
    .from("works")
    .select("*")
    .eq("is_published", true)
    .order("created_at", { ascending: false })
    .limit(maxCount);

  if (error) {
    console.error("Error fetching works:", error);
  }

  works = data || [];
}
---

<Section background="primary">
  <Container>
    <div class="works-inner">
      <div class="works-header">
        <SectionTitle title="Works" subtitle="제작실적" />
        <LinkText href="/works/" ariaLabel="Works 전체보기">
          전체보기
        </LinkText>
      </div>

      <div class="works-grid">
        {
          works &&
            works.map((work) => (
              <article class="work-item fade" data-animate>
                <a class="item-link" href={`/works/${work.id}`}>
                  <div class="item-image">
                    <img
                      src={
                        work.image ||
                        "https://images.unsplash.com/photo-1586075010923-2dd4570fb338?w=800&h=600&fit=crop"
                      }
                      alt={work.title}
                      width="800"
                      height="500"
                      loading="lazy"
                    />
                    <span class="item-category">{work.tag || "가이드"}</span>
                  </div>
                  <div class="item-content">
                    <h3 class="item-title">{work.title}</h3>
                    <p class="item-description">{work.description}</p>
                    <span class="item-view">자세히 보기</span>
                  </div>
                </a>
              </article>
            ))
        }
      </div>
    </div>
  </Container>
</Section>

<style lang="scss">
  .works-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: var(--sp-lg);
    margin-bottom: var(--sp-3xl);

    @media (min-width: 900px) {
      position: sticky;
      top: var(--sp-4xl);
      flex-direction: column;
      align-items: start;
      align-self: flex-start;
      flex-grow: 1;
      margin: 0;
      min-width: fit-content;
    }
  }

  .works-inner {
    @media (min-width: 900px) {
      display: grid;
      grid-template-columns: 20% 1fr;
      gap: 0 var(--sp-4xl);
    }
  }

  .works-grid {
    display: grid;
    gap: var(--sp-3xl);

    @media (min-width: 600px) {
      gap: var(--sp-5xl);
    }
  }

  .work-item {
  }

  .item-link {
    transition: transform var(--transition-slow);

    &:hover {
      transform: translateY(-4px);
    }
  }

  .item-image {
    position: relative;
    width: 100%;
    overflow: hidden;
    border-radius: var(--radius-3xl);

    img {
      width: 100%;
      height: auto;
      object-fit: cover;
      aspect-ratio: 16 / 10;
      transition: transform var(--transition-slower);
    }

    .work-item:hover & img {
      transform: scale(1.05);
    }
  }

  .item-category {
    position: absolute;
    top: var(--sp-md);
    left: var(--sp-md);
    padding: var(--sp-xs) var(--sp-md);
    background-color: rgba(255, 255, 255, 0.7);
    color: var(--c-text);
    font-size: var(--fs-xs);
    font-weight: 500;
    line-height: var(--lh-tight);
    text-transform: uppercase;
    letter-spacing: 0.02em;
    border-radius: var(--radius-full);
  }

  .item-content {
    display: flex;
    flex-direction: column;
    gap: var(--sp-sm);
    margin: var(--sp-lg) 0 0;

    @media (min-width: 900px) {
      margin: var(--sp-lg) 0 0;
    }
  }

  .item-title {
    color: var(--c-text);
    font-size: var(--fs-lg);
    font-weight: 500;
    line-height: var(--lh-snug);

    @media (min-width: 900px) {
      font-size: var(--fs-xl);
    }
  }

  .item-description {
    color: var(--c-text-sub);
    font-size: var(--fs-md);
    line-height: var(--lh-loose);

    @media (min-width: 900px) {
      font-size: var(--fs-base);
    }
  }

  .item-view {
    align-self: flex-start;
    display: inline-block;
    width: var(--buttonWidth);
    margin: var(--sp-md) 0 0;
    padding: var(--sp-sm) var(--sp-lg);
    border: 1px solid var(--c-border);
    border-radius: var(--radius-full);
    background-image: linear-gradient(
      to right,
      var(--c-primary) 50%,
      transparent 50%
    );
    background-size: 200% 100%;
    background-position: right;
    color: var(--c-text);
    font-size: var(--fs-sm);
    font-weight: 400;
    line-height: 1.6;
    text-align: center;
    transition:
      background-position var(--transition-slow),
      color var(--transition-slow),
      border-color var(--transition-slow);

    .work-item:hover & {
      background-position: left;
      color: var(--c-text-inverse);
      border-color: var(--c-primary);
    }
  }
</style>
